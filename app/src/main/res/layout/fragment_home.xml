<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_fragments.nav_home"
    android:background="@color/white_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fsl_card"
            layout="@layout/home_fsl_card"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/fsl_card"
            android:id="@+id/recyclerCard"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/learnLabelContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/txtLearnLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/menu_learn"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtHomeLearnSeeMore"
                        android:text="@string/label_see_more"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:padding="1dp"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/text_clicked_bg"
                        android:focusable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtLearnLabel"
                        android:text="@string/home_learn_category_description"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>


                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/learnRecycler"
                    android:layout_below="@id/learnLabelContainer"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/recyclerCard"
            layout="@layout/video_category_item"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>