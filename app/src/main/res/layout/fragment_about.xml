<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_fragments.nav_about">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:src="@drawable/gad_logo" />

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/logo1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ispeak_sign_logo" />

            <ImageView
                android:id="@+id/logo3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/logo2"
                android:src="@drawable/cvsu_logo" />
        </RelativeLayout>
        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_layout"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryVariant"
            android:text="iSPEAK SIGNS: A FILIPINO SIGN LANGUAGE LEARNING APPLICATION WITH STATIC FSL RECOGNITION FOR CAVITE STATE UNIVERSITY â€“ CAVITE CITY CAMPUS GENDER AND DEVELOPMENT UNIT"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description1"
            android:text="\'Gender Equality is a human fight, not a female fight\'"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description2"
            android:text="Gender and Development Resource Center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryVariant"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/description4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description3"
            android:text="CvSU-CCC GAD"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorPrimaryVariant"
            android:textSize="13sp"
            android:textStyle="bold"/>



    </RelativeLayout>

</androidx.core.widget.NestedScrollView>